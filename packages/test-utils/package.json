{
  "name": "@reown/test-utils",
  "version": "0.0.1",
  "description": "Shared test utilities for AppKit adapters",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:esm && pnpm build:cjs && pnpm build:types",
    "build:esm": "tsc -p tsconfig.json --outDir dist/esm --module esnext",
    "build:cjs": "tsc -p tsconfig.json --outDir dist/cjs --module commonjs",
    "build:types": "tsc -p tsconfig.json --outDir dist/types --emitDeclarationOnly",
    "test": "vitest run"
  },
  "dependencies": {
    "@reown/appkit": "workspace:*",
    "@reown/appkit-common": "workspace:*",
    "@reown/appkit-controllers": "workspace:*",
    "@solana/web3.js": "1.98.0",
    "@walletconnect/types": "2.20.2",
    "@walletconnect/universal-provider": "2.20.2",
    "bs58": "6.0.0",
    "sats-connect": "1.4.1",
    "viem": "1.19.3"
  },
  "devDependencies": {
    "typescript": "5.0.4",
    "vitest": "0.34.6"
  }
}
