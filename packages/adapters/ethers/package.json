  "sideEffects": false,
  "type": "module",
  "main": "./dist/esm/src/index.js",
  "types": "./dist/types/src/index.d.ts",
  "files": [
    "dist",
    "!tsconfig.tsbuildinfo",
    "README.md"
  ],
  "scripts": {
    "build:clean": "rm -rf dist",
    "build": "tsc --build tsconfig.build.json",
    "watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
