    "@reown/appkit-scaffold-ui": "workspace:*",
    "@reown/appkit-utils": "workspace:*",
    "@reown/appkit-wallet": "workspace:*",
    "@walletconnect/universal-provider": "2.21.3",
    "valtio": "2.1.5"
