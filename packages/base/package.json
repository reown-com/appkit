    "@web3modal/ui": "workspace:*",
    "@web3modal/siwe": "workspace:*",
    "@web3modal/wallet": "workspace:*",
    "@web3modal/polyfills": "workspace:*",
    "@web3modal/scaffold": "workspace:*",
